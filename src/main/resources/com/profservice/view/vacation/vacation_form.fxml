<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.profservice.controller.VacationFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Сотрудник:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <ComboBox fx:id="employeeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Дата начала:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Дата окончания:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Тип отпуска:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Количество дней:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="daysCountField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Статус:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Утверждено:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <ComboBox fx:id="approverComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button text="Сохранить" fx:id="saveButton" onAction="#handleSave" defaultButton="true" />
    </HBox>
</GridPane>