<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.profservice.controller.HiringFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Сотрудник:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <ComboBox fx:id="employeeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Дата приема:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <DatePicker fx:id="hireDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Номер договора:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="contractNumberField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Зарплата:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="salaryField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Испытательный срок (мес):" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="probationField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="HR менеджер:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <ComboBox fx:id="hrManagerComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button text="Сохранить" fx:id="saveButton" onAction="#handleSave" defaultButton="true" />
    </HBox>
</GridPane>