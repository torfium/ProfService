<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.profservice.controller.EmployeeFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Фамилия:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Имя:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Отчество:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="middleNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Дата рождения:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <DatePicker fx:id="birthDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Пол:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <ComboBox fx:id="genderComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Серия паспорта:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="passportSeriesField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Номер паспорта:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="passportNumberField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label text="Адрес:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <Label text="Телефон:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="9" />

    <Label text="Дата приема:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
    <DatePicker fx:id="hireDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="10" />

    <Label text="Дата увольнения:" GridPane.columnIndex="0" GridPane.rowIndex="11" />
    <DatePicker fx:id="dismissalDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="11" />

    <Label text="Должность:" GridPane.columnIndex="0" GridPane.rowIndex="12" />
    <ComboBox fx:id="positionComboBox" GridPane.columnIndex="1" GridPane.rowIndex="12" />

    <Label text="Отдел:" GridPane.columnIndex="0" GridPane.rowIndex="13" />
    <ComboBox fx:id="departmentComboBox" GridPane.columnIndex="1" GridPane.rowIndex="13" />

    <Label text="Статус:" GridPane.columnIndex="0" GridPane.rowIndex="14" />
    <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="14" />

    <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="15">
        <Button text="Сохранить" fx:id="saveButton" onAction="#handleSave" defaultButton="true" />
    </HBox>
</GridPane>