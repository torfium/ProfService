<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.profservice.controller.MovementFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Сотрудник:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <ComboBox fx:id="employeeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Тип перемещения:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Дата:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Предыдущий отдел:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <ComboBox fx:id="previousDepartmentComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Новый отдел:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <ComboBox fx:id="newDepartmentComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Предыдущая должность:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <ComboBox fx:id="previousPositionComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Новая должность:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <ComboBox fx:id="newPositionComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label text="Изменение зарплаты:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <TextField fx:id="salaryChangeField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <Label text="Причина:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
    <TextField fx:id="reasonField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

    <Label text="Ответственный:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
    <ComboBox fx:id="responsibleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="9" />

    <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="10">
        <Button text="Сохранить" fx:id="saveButton" onAction="#handleSave" defaultButton="true" />
    </HBox>
</GridPane>